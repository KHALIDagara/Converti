<% content_for :title, "Editing landing page" %>

<div class="lp-editor">
  <%# the part 1 .. the pane 1 %> 
    <aside class="lp-editor__sidebar">
      <div class="switch-buttons" >
        <%= link_to "Styles", styles_landing_page_path(@landing_page),
            class: "lp-btn lp-btn--success",
            data: {turbo_frame: "editor-replacable"} %>
        <%= link_to "copywriting", copywriting_landing_page_path(@landing_page),
            class: "lp-btn lp-btn--success",
            data: {turbo_frame: "editor-replacable"} %>
        <%= link_to "services", services_landing_page_path(@landing_page),
            class: "lp-btn lp-btn--success",
            data: {turbo_frame: "editor-replacable"} %>
      </div> 
      <%= turbo_frame_tag "editor-replacable" do %> 
        <h1> editor replacable </h1> 
      <% end %> 
      <div class="lp-editor__footer">
      <%= link_to "View Show Page", @landing_page, class: "lp-btn lp-btn--success", target: "_blank" %>
      <%= link_to "Back to landing pages", landing_pages_path, class: "lp-btn lp-btn--secondary" %>
    </div>
    
  </aside>

  <%# the part two ... or the pane two %>
  <main class="lp-editor__preview">
    <header class="lp-editor__preview-header">
      <h2>Preview</h2>
    </header>
    <%= turbo_frame_tag "canvas-preview" do %>
      <div class="lp-editor__canvas">
        <%= render "canvas", landing_page: @landing_page %>
      </div>
    <% end %>
  </main>
</div>

<style>
  /* ============================================
     Landing Page Editor - Scoped Styles
     ============================================ */

  /* CSS Custom Properties */
  .lp-editor {
    --lp-sidebar-width: 450px;
    --lp-spacing-sm: 10px;
    --lp-spacing-md: 15px;
    --lp-spacing-lg: 20px;
    --lp-border-radius: 6px;
    --lp-border-color: #e0e0e0;
    --lp-bg-primary: #ffffff;
    --lp-bg-secondary: #f5f5f5;
    --lp-bg-card: #f9f9f9;
    --lp-text-primary: #333333;
    --lp-text-secondary: #666666;
    --lp-color-success: #28a745;
    --lp-color-success-hover: #218838;
    --lp-color-neutral: #6c757d;
    --lp-color-neutral-hover: #5a6268;
  }

  /* Layout Reset */
  .lp-editor,
  .lp-editor *,
  .lp-editor *::before,
  .lp-editor *::after {
    box-sizing: border-box;
  }

  /* Two-Pane Container */
  .lp-editor {
    display: flex;
    flex-direction: row;
    min-height: 100vh;
    width: 100vw;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
  }

  /* Left Sidebar */
  .lp-editor__sidebar {
    flex: 0 0 var(--lp-sidebar-width);
    width: var(--lp-sidebar-width);
    height: 100vh;
    overflow-y: auto;
    padding: var(--lp-spacing-lg);
    background-color: var(--lp-bg-primary);
    border-right: 1px solid var(--lp-border-color);
  }

  /* Right Preview Pane */
  .lp-editor__preview {
    flex: 1;
    min-width: 0;
    height: 100vh;
    overflow-y: auto;
    padding: var(--lp-spacing-lg);
    background-color: var(--lp-bg-secondary);
  }

  .lp-editor__preview-header h2 {
    margin: 0 0 var(--lp-spacing-lg) 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--lp-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .lp-editor__canvas {
    background-color: var(--lp-bg-primary);
    border-radius: var(--lp-border-radius);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  /* Card Component */
  .lp-editor__card {
    margin-bottom: var(--lp-spacing-lg);
    padding: var(--lp-spacing-md);
    background-color: var(--lp-bg-card);
    border: 1px solid var(--lp-border-color);
    border-radius: var(--lp-border-radius);
  }

  .lp-editor__card-title {
    margin: 0 0 var(--lp-spacing-md) 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--lp-text-primary);
  }

  .lp-editor__card-actions {
    margin-top: var(--lp-spacing-md);
    padding-top: var(--lp-spacing-md);
    border-top: 1px solid var(--lp-border-color);
  }

  /* Footer Actions */
  .lp-editor__footer {
    display: flex;
    flex-wrap: wrap;
    gap: var(--lp-spacing-sm);
    margin-top: var(--lp-spacing-lg);
    padding-top: var(--lp-spacing-lg);
    border-top: 2px solid var(--lp-border-color);
  }

  /* Button Component */
  .lp-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--lp-spacing-sm) var(--lp-spacing-lg);
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  .lp-btn--success {
    background-color: var(--lp-color-success);
    color: #ffffff;
  }

  .lp-btn--success:hover {
    background-color: var(--lp-color-success-hover);
  }

  .lp-btn--secondary {
    background-color: var(--lp-color-neutral);
    color: #ffffff;
  }

  .lp-btn--secondary:hover {
    background-color: var(--lp-color-neutral-hover);
  }
  .switch-buttons{ 
    display: flex;  
  }

  /* Turbo Frame Reset */
  .lp-editor turbo-frame {
    display: block;
  }

  /* Responsive Fallback */
  @media (max-width: 900px) {
    .lp-editor {
      flex-direction: column;
      position: static;
    }

    .lp-editor__sidebar {
      flex: none;
      width: 100%;
      height: auto;
      max-height: 50vh;
      border-right: none;
      border-bottom: 1px solid var(--lp-border-color);
    }

    .lp-editor__preview {
      height: auto;
      min-height: 50vh;
    }
  }
</style>
