<style>
  /* Localized styles for this specific landing page */
  #<%= dom_id @landing_page %> {
    --primary-color: <%= @landing_page.styles.dig('colors', 'primaryColor') %>;
    --secondary-color: <%= @landing_page.styles.dig('colors', 'secondaryColor') %>;
    --primary-font: <%= @landing_page.styles.dig('fonts', 'primaryFont') %>;
    
    font-family: var(--primary-font);
    color: #333;
    line-height: 1.6;
  }

  .hero-section {
    background-color: var(--primary-color);
    color: var(--secondary-color);
    padding: 60px 20px;
    text-align: center;
    border-radius: 8px;
  }

  .hero-section h1 {
    margin: 0 0 10px 0;
    font-size: 2.5rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }

  .service-card {
    border: 1px solid #ddd;
    padding: 20px;
    border-radius: 10px;
    transition: transform 0.2s;
  }

  .service-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
  }

  .service-title {
    color: var(--primary-color);
    margin-top: 15px;
    font-size: 1.25rem;
  }

  .service-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
  }
</style>

<div id="<%= dom_id @landing_page %>">

  <%# 1. Hero Section %>
  <header class="hero-section">
    <h1><%= @landing_page.copywriting.dig('hero_section', 'heading') %></h1>
    <p><%= @landing_page.copywriting.dig('hero_section', 'subheading') %></p>
  </header>

  <%# 2. Services Section %>
  <section class="services-container">
    <h2 style="margin-top: 40px;">Our Services</h2>

    <div class="services-grid">
      <% @landing_page.services.each do |service| %>
        <article class="service-card">
          <% if service.image.attached? %>
            <div class="service-image">
              <%= image_tag service.image %>
            </div>
          <% end %>
          
          <h3 class="service-title"><%= service.title %></h3>
          <p><%= service.description %></p>
        </article>
      <% end %>
    </div>
  </section>

</div>
