<style>
  /* Localized styles for this specific landing page */
  #<%= dom_id @landing_page %> {
    /* --- 1. THEME COLORS (From Rails) --- */
    --primary-color: <%= @landing_page.styles.dig('colors', 'primaryColor') %>;
    --secondary-color: <%= @landing_page.styles.dig('colors', 'secondaryColor') %>;
    --light-color: <%= @landing_page.styles.dig('colors','lightColor') %>;
    --dark-color: <%= @landing_page.styles.dig('colors','darkColor') %>;
    --primary-font: <%= @landing_page.styles.dig('fonts', 'primaryFont') %>;
    
    /* --- 2. CONFIGURABLE VARIABLES (Change these to update the whole site) --- */
    
    /* Spacing System */
    --space-xs: 8px;
    --space-sm: 16px;
    --space-md: 24px;
    --space-lg: 40px;
    --space-xl: 80px;
    --content-max-width: 1200px;

    /* Border Radius System */
    --radius-sm: 8px;   /* For small buttons, images */
    --radius-md: 16px;  /* For cards, large buttons */
    --radius-lg: 24px;  /* For sections or large containers */
    --radius-round: 50%;

    /* Transparency & Readability */
    --bg-overlay: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)); /* Darker for better text contrast */
    --glass-bg: rgba(255, 255, 255, 0.15); /* For review cards */
    --glass-border: rgba(255, 255, 255, 0.2);
    --text-shadow: 0 2px 4px rgba(0,0,0,0.5); /* Pop text off background */

    /* --- 3. BASE STYLES --- */
    background-image:
      var(--bg-overlay),
      url('<%= url_for(@landing_page.background_image) if @landing_page.background_image.attached? %>');
    background-size: cover;
    background-position: center;
    background-attachment: fixed; /* Parallax effect */
    
    color: var(--secondary-color);
    font-family: var(--primary-font);
    line-height: 1.6;
    
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding-bottom: var(--space-xl);
  }

  /* --- HERO SECTION --- */
  .hero-section {
    padding: var(--space-xl) var(--space-md);
    width: 100%;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    align-items: center;
  }

  .hero-section h1 {
    margin: 0 0 var(--space-sm) 0;
    font-size: 3rem; 
    font-weight: 700;
    text-shadow: var(--text-shadow); /* Ensures readability on image */
  }

  .hero-section p {
    font-size: 1.25rem;
    margin-bottom: var(--space-md);
    text-shadow: var(--text-shadow);
    max-width: 800px;
  }

  /* --- VIDEO PLAYER (Refined) --- */
  .hero-video-wrapper {
    position: relative;
    width: 100%;
    max-width: 800px;
    aspect-ratio: 16 / 9;
    border-radius: var(--radius-md); 
    overflow: hidden;
    cursor: pointer;
    background-color: #000;
    box-shadow: 0 20px 40px rgba(0,0,0,0.4); /* Lift video off page */
    margin-bottom: var(--space-lg);
  }

  .hero-video-player {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .play-button-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.2);
    transition: background-color 0.3s ease;
    z-index: 10;
  }
  
  .hero-video-wrapper:hover .play-button-overlay {
    background-color: rgba(0, 0, 0, 0.1);
  }

  .hero-video-wrapper:hover .play-button-overlay svg {
    transform: scale(1.1);
    transition: transform 0.2s;
  }

  /* --- BUTTONS --- */
  button {
    transition: all 0.2s ease;
  }
  
  button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.3);
  }

  .whatsapp-button {
    background-color: #25D366; 
    color: white;
    font-family: var(--primary-font);
    font-size: 1.2rem;
    padding: var(--space-sm) var(--space-lg);
    border: none;
    border-radius: var(--radius-md); /* Smooth pill shape */
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-weight: 600;
  }

  .services-button {
    background-color: var(--light-color);
    color: var(--dark-color);
    font-family: var(--primary-font);
    font-size: 1.2rem;
    padding: var(--space-sm) var(--space-lg);
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-weight: 600;
  }

  /* --- REVIEWS SECTION (Glassmorphism) --- */
  .reviews-section {
    width: 100%;
    padding: var(--space-lg) var(--space-md);
    box-sizing: border-box;
  }

  /* Note: Ensure your review partials use a class like .review-card */
  #reviews-stream-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-md);
  }
  
  /* Target the cards inside the review container */
  #reviews-stream-container > div, .review-card {
    background: var(--glass-bg);
    backdrop-filter: blur(10px); /* The Blur Effect */
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid var(--glass-border);
    padding: var(--space-md);
    border-radius: var(--radius-md);
    color: var(--secondary-color);
    max-width: 400px;
    text-align: left;
  }

  /* --- SERVICES GRID --- */
  .services-section {
    width: 100%;
    padding: 0 var(--space-md);
    box-sizing: border-box;
  }

  .services-section h2 {
    font-size: 2.5rem;
    margin-top: var(--space-xl);
    margin-bottom: var(--space-lg);
    text-shadow: var(--text-shadow);
  }

  #<%= dom_id @landing_page %> .lp-services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  #<%= dom_id @landing_page %> .lp-service-card {
    background-color: rgba(255, 255, 255, 0.3); /* High opacity for readability */
    border: 1px solid transparent;
    padding: var(--space-md);
    border-radius: var(--radius-md);
    transition: transform 0.3s, border-color 0.3s;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: var(--dark-color); /* Dark text on light card */
  }

  #<%= dom_id @landing_page %> .lp-service-card:hover {
    transform: translateY(-8px);
    border-color: var(--primary-color);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
  }

  #<%= dom_id @landing_page %> .lp-service-title {
    color: var(--primary-color);
    margin-top: var(--space-sm);
    font-size: 1.5rem;
    font-weight: 700;
  }

  #<%= dom_id @landing_page %> .lp-service-image img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: var(--radius-sm);
  }

  #<%= dom_id @landing_page %> .lp-service-button {
    background-color: var(--dark-color);
    color: var(--light-color);
    font-family: var(--primary-font);
    font-size: 1rem;
    padding: 12px 24px;
    border: none;
    border-radius: var(--radius-sm);
    cursor: pointer;
    margin-top: var(--space-md);
    width: 100%;
  }

  /* --- MAP --- */
  iframe {
    border-radius: var(--radius-lg);
    margin-top: var(--space-xl);
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }
</style>
