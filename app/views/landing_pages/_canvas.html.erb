<style>
  /* Localized styles for this specific landing page */
  #<%= dom_id @landing_page %> {
    --primary-color: <%= @landing_page.styles.dig('colors', 'primaryColor') %>;
    --secondary-color: <%= @landing_page.styles.dig('colors', 'secondaryColor') %>;
    --light-color: <%= @landing_page.styles.dig('colors','lightColor') %>;
    --dark-color: <%= @landing_page.styles.dig('colors','darkColor') %>;
    --primary-font: <%= @landing_page.styles.dig('fonts', 'primaryFont') %>;
    
    background-image: 
    linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
    url('<%= url_for(@landing_page.background_image) if @landing_page.background_image.attached? %>');
    color: var(--secondary-color);
    font-family: var(--primary-font);
    line-height: 1.6;
    display: flex;
    flex-direction: column;
    align-items: center;      /* Centers items horizontally in a column flow */
    justify-content: center;   /* Centers items vertically if the container has height */
    text-align: center;        /* Ensures text inside nested divs centers by default */
    max-width: 1200px;         /* Prevents the content from being too wide on large screens */
    margin: 0 auto;            /* Centers the entire container on the page */
  }


  .hero-section {
    padding: 60px 20px;
    text-align: center;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }

  .hero-section h1 {
    margin: 0 0 10px 0;
    font-size: 2.5rem;
  }


  .whatsapp-button {
    background-color: #25D366;
    color: white;
    font-family: var(--primary-font);
    font-size: 1.2rem;
    padding: 16px 32px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .services-button {
    background-color: var(--light-color);
    color: var(--dark-color);
    font-family: var(--primary-font);
    font-size: 1.2rem;
    padding: 16px 32px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  /* Scoped to canvas preview only - won't affect editor sidebar */
  .lp-editor__canvas #<%= dom_id @landing_page %> .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }

  .lp-editor__canvas #<%= dom_id @landing_page %> .service-card {
    border: 1px solid #ddd;
    padding: 20px;
    border-radius: 10px;
    transition: transform 0.2s;
  }

  .lp-editor__canvas #<%= dom_id @landing_page %> .service-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
  }

  .lp-editor__canvas #<%= dom_id @landing_page %> .service-title {
    color: var(--primary-color);
    margin-top: 15px;
    font-size: 1.25rem;
  }

  .lp-editor__canvas #<%= dom_id @landing_page %> .service-image img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
  }
</style>
<%# listening to updates %> 
<%= turbo_stream_from @landing_page %>
<div id="<%= dom_id @landing_page %>">

  <%# 1. Hero Section %>
  <header class="hero-section">
    <% if @landing_page.logo.attached? %>
      <%= image_tag @landing_page.logo, style: "max-width: 100px; max-height: 100px;" %>
    <% end %>
    <h1><%= @landing_page.copywriting.dig('hero_section', 'heading') %></h1>
    <p><%= @landing_page.copywriting.dig('hero_section', 'subheading') %></p>
    <% if @landing_page.hero_video.attached? %>
      <%= video_tag rails_blob_path(@landing_page.hero_video), size: "320x240", controls: true, preload: 'auto' %>
    <% end %>

