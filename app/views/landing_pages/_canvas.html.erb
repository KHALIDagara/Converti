<style>
  /* Localized styles for this specific landing page */
  #<%= dom_id @landing_page %> {
    --primary-color: <%= @landing_page.styles.dig('colors', 'primaryColor') %>;
    --secondary-color: <%= @landing_page.styles.dig('colors', 'secondaryColor') %>;
    --light-color: <%= @landing_page.styles.dig('colors','lightColor') %>;
    --dark-color: <%= @landing_page.styles.dig('colors','darkColor') %>;
    --primary-font: <%= @landing_page.styles.dig('fonts', 'primaryFont') %>;
    
    background-image:
    linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)), /* TODO: var(--overlay-color) */
    url('<%= url_for(@landing_page.background_image) if @landing_page.background_image.attached? %>');
    color: var(--secondary-color);
    font-family: var(--primary-font);
    line-height: 1.6; /* TODO: var(--line-height) */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    max-width: 1200px; /* TODO: var(--container-max-width) */
    margin: 0 auto;
  }

  /* Container: Sets the stage */
.hero-video-wrapper {
  position: relative;
  width: 100%;
  max-width: 800px; /* Optional: limits max width */
  aspect-ratio: 16 / 9; /* CRITICAL: Enforces standard video shape for both image and video */
  border-radius: 8px; /* Optional: matches your theme */
  overflow: hidden;   /* Keeps corners rounded */
  cursor: pointer;    /* Shows it's clickable */
  background-color: #000; /* Fallback color */
}

/* Video: Forces it to fill the container perfectly */
.hero-video-player {
  width: 100%;
  height: 100%;
  object-fit: cover; /* CRITICAL: Ensures video/poster fills space without stretching */
  display: block;
}

/* Overlay: Centers the SVG */
.play-button-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.2); /* Optional: slight dark tint to make white text pop */
  transition: opacity 0.3s ease;
  z-index: 10;
}

/* Hover Effect: Makes the play button grow slightly */
.hero-video-wrapper:hover .play-button-overlay svg {
  transform: scale(1.1);
  transition: transform 0.2s;
}

  .hero-section {
    padding: 60px 20px; /* TODO: var(--section-padding) */
    text-align: center;
    border-radius: 8px; /* TODO: var(--section-radius) */
    display: flex;
    flex-direction: column;
    gap: 20px; /* TODO: var(--element-gap) */
    align-items: center;
  }

  .hero-section h1 {
    margin: 0 0 10px 0;
    font-size: 2.5rem; /* TODO: var(--hero-heading-size) */
  }

  .whatsapp-button {
    background-color: #25D366; /* TODO: var(--accent-color) */
    color: white; /* TODO: var(--white-color) */
    font-family: var(--primary-font);
    font-size: 1.2rem; /* TODO: var(--button-font-size) */
    padding: 16px 32px; /* TODO: var(--button-padding) */
    border: none;
    border-radius: 8px; /* TODO: var(--button-radius) */
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px; /* TODO: var(--button-gap) */
  }

  .services-button {
    background-color: var(--light-color);
    color: var(--dark-color);
    font-family: var(--primary-font);
    font-size: 1.2rem; /* TODO: var(--button-font-size) */
    padding: 16px 32px; /* TODO: var(--button-padding) */
    border: none;
    border-radius: 8px; /* TODO: var(--button-radius) */
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 10px; /* TODO: var(--button-gap) */
  }

  /* Landing page services grid */
  #<%= dom_id @landing_page %> .lp-services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* TODO: var(--grid-min-column-width) */
    gap: 20px; /* TODO: var(--grid-gap) */
    margin-top: 40px; /* TODO: var(--section-margin-top) */
  }

  /* Landing page service card */
  #<%= dom_id @landing_page %> .lp-service-card {
    border: 1px solid #ddd; /* TODO: var(--border-color) */
    padding: 20px; /* TODO: var(--card-padding) */
    border-radius: 10px; /* TODO: var(--card-radius) */
    transition: transform 0.2s;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  #<%= dom_id @landing_page %> .lp-service-card:hover {
    transform: translateY(-5px);
    border-color: var(--primary-color);
  }

  #<%= dom_id @landing_page %> .lp-service-title {
    color: var(--primary-color);
    margin-top: 15px; /* TODO: var(--title-margin-top) */
    font-size: 1.25rem; /* TODO: var(--service-title-size) */
  }

  #<%= dom_id @landing_page %> .lp-service-image img {
    width: 100%;
    height: 200px; /* TODO: var(--service-image-height) */
    object-fit: cover;
    border-radius: 5px; /* TODO: var(--image-radius) */
  }

  #<%= dom_id @landing_page %> .lp-service-button {
    background-color: var(--light-color);
    color: var(--dark-color);
    font-family: var(--primary-font);
    font-size: 1rem; /* TODO: var(--service-button-font-size) */
    padding: 12px 24px; /* TODO: var(--service-button-padding) */
    border: none;
    border-radius: 8px; /* TODO: var(--button-radius) */
    cursor: pointer;
    margin-top: 16px; /* TODO: var(--button-margin-top) */
  }
</style>
